{
  "name": "contenteditable-visualizer",
  "version": "0.2.0",
  "description": "SDK for visualizing and tracking contenteditable events, ranges, and DOM changes",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "contenteditable",
    "visualizer",
    "debugging",
    "prosemirror",
    "slate",
    "editor"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/easylogic/contenteditable-visualizer.git",
    "directory": "packages/contenteditable-visualizer"
  },
  "bugs": {
    "url": "https://github.com/easylogic/contenteditable-visualizer/issues"
  },
  "homepage": "https://github.com/easylogic/contenteditable-visualizer#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "dependencies": {
    "snabbdom": "^3.5.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "jsdom": "^24.1.0"
  }
}
